<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/btn_favorite_tabheader"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@android:color/black" xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:id="@+id/textview" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/hello"></TextView>

	<Button android:id="@+id/StartBtn" android:layout_width="100dip"
		android:layout_height="50dip" android:text="开始"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"></Button>

	<Button android:layout_width="100dip" android:id="@+id/locBtn"
		android:text="定位" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/StartBtn" android:layout_alignBottom="@+id/StartBtn"
		android:layout_alignTop="@+id/StartBtn"></Button>

	<Button android:layout_width="100dip" android:id="@+id/setBtn"
		android:text="设置" android:layout_height="50dip"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"></Button>

	<EditText android:layout_width="100dip" android:layout_height="40dip"
		android:id="@+id/addrEdit" android:text="detail" android:layout_above="@+id/setBtn"
		android:layout_alignLeft="@+id/setBtn" android:layout_alignRight="@+id/setBtn"></EditText>
		
	<EditText android:layout_width="100dip" android:layout_height="40dip"
		android:id="@+id/edit" android:text="10000" android:layout_above="@+id/setBtn"
		android:layout_alignLeft="@+id/addrEdit" android:layout_alignRight="@+id/addrEdit"></EditText>
		
	<TextView android:layout_width="wrap_content" android:id="@+id/textView2"
		android:layout_height="wrap_content" android:text="扫描时间间隔 :"
		android:layout_toLeftOf="@+id/edit" android:layout_alignTop="@+id/edit"
		android:layout_alignBottom="@+id/edit"></TextView>
		
	<EditText android:layout_width="100dip" android:layout_height="40dip"
		android:id="@+id/coorEdit" android:text="bd09ll" android:layout_above="@+id/edit"
		android:layout_alignLeft="@+id/edit" android:layout_alignRight="@+id/edit"></EditText>
		
	<CheckBox android:layout_above="@+id/coorEdit"
		android:layout_height="40dip" android:layout_width="wrap_content"
		android:text="打开GPS" android:id="@+id/gpsCheck"
		android:layout_alignRight="@+id/coorEdit"></CheckBox>
		
	<TextView android:layout_width="wrap_content" android:id="@+id/textView1"
		android:layout_height="wrap_content" android:text="坐标系类型 :"
		android:layout_toLeftOf="@+id/coorEdit" android:layout_alignTop="@+id/coorEdit"
		android:layout_alignBottom="@+id/coorEdit"></TextView>


</RelativeLayout>
